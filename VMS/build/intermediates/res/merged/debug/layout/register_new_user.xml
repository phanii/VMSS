<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/context_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/actionbarcolor"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"

            android:gravity="center"
            android:padding="5dp"
            android:text="@string/registration"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView

            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_revert" />
    </LinearLayout>

    <include layout="@layout/window_title" />

    <include layout="@layout/steps" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#e8e8e7"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/stripcolor"
                android:padding="5dp"
                android:text="@string/personaldetails"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:hint="@string/hint_firstname"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:singleLine="true"
                android:id="@+id/middleName"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:hint="@string/hint_middlename"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:singleLine="true"
                android:id="@+id/lastName"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:hint="@string/hint_lastname"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:singleLine="true"
                android:id="@+id/empId"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:ems="7"
                android:hint="@string/hint_empid"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:singleLine="true"
                android:id="@+id/designation"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:ems="7"
                android:hint="@string/hint_desg"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:singleLine="true"
                android:id="@+id/compName"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:ems="7"
                android:hint="@string/hint_cmpname"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:singleLine="true"
                android:id="@+id/category"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:hint="@string/hint_select_cat"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <TextView
                android:singleLine="true"
                android:id="@+id/dob"
                android:enabled="true"

                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:hint="@string/hint_dob"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></TextView>

            <Spinner
                android:id="@+id/reg_nationality"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"

                android:popupBackground="@color/stripcolor"
                android:spinnerMode="dropdown"

                android:drawSelectorOnTop="true"
                  />

            <RadioGroup
                android:id="@+id/myRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/radio_male" />

                <RadioButton
                    android:id="@+id/vibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/radio_female" />
            </RadioGroup>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="6dp"
                android:background="@color/orange_btn_color"
                android:ems="5"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/next"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
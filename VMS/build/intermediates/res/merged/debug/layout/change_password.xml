<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_gray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_marginTop="20dp">


        <EditText
            android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
            android:id="@+id/cP_oldPassword"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#f3f3f3"
            android:hint="@string/hint_oldpwd"
            android:paddingLeft="5dp"
            android:password="true"
            android:textSize="13dp"></EditText>

        <EditText
            android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
            android:id="@+id/cp_newPassword"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#f3f3f3"
            android:hint="@string/newpwd"
            android:paddingLeft="5dp"
            android:password="true"
            android:textSize="13dp"></EditText>

        <EditText
            android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
            android:id="@+id/cp_confirmPassword"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#f3f3f3"
            android:hint="@string/confirmpwd"
            android:paddingLeft="5dp"
            android:password="true"
            android:textSize="13dp"></EditText>

        <EditText
            android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
            android:id="@+id/cp_email"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#f3f3f3"
            android:hint="@string/email"
            android:paddingLeft="5dp"
            android:textSize="13dp"></EditText>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/orange_btn_color"
                android:ems="6"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/fa_confirm"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/orange_btn_color"
                android:ems="6"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/fa_home"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

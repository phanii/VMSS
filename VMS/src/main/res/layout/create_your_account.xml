<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_gray">

    <LinearLayout

        android:id="@+id/createll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/context_title_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/actionbarcolor"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="7"

                android:gravity="center"
                android:padding="5dp"
                android:text="@string/registration"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView

                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@android:drawable/ic_menu_revert" />
        </LinearLayout>

        <include layout="@layout/window_title" />

        <include layout="@layout/steps3" />

        <ScrollView

            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#e8e8e7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@color/stripcolor"
                    android:padding="5dp"
                    android:text="@string/createyouraccount"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/userId"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#f3f3f3"
                    android:hint="@string/userid"
                    android:paddingLeft="5dp"
                    android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                    android:textSize="13dp"></EditText>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#f3f3f3"
                    android:hint="@string/pwd"
                    android:maxLength="10"
                    android:paddingLeft="5dp"
                    android:password="true"
                    android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                    android:textSize="13dp"></EditText>

                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#f3f3f3"
                    android:hint="@string/confirmpwd"
                    android:maxLength="10"
                    android:paddingLeft="5dp"
                    android:password="true"
                    android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                    android:textSize="13dp"></EditText>

                <Spinner
                    android:popupBackground="@color/stripcolor"
                    android:spinnerMode="dropdown"

                    android:id="@+id/questionType"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/provideAnswer"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#f3f3f3"
                    android:ems="7"
                    android:hint="@string/providerans"
                    android:paddingLeft="5dp"
                    android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                    android:textSize="13dp"></EditText>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <com.joanzapata.iconify.widget.IconTextView
                        android:id="@+id/reset"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange_btn_color"
                        android:ems="6"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/reset"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:id="@+id/submit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange_btn_color"
                        android:ems="6"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/fa_submit"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_light_gray"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/context_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/actionbarcolor"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"

            android:gravity="center"
            android:padding="5dp"
            android:text="@string/registration"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView

            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_revert" />
    </LinearLayout>

    <include layout="@layout/window_title" />

    <include layout="@layout/steps2" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/light_light_gray"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/stripcolor"
                android:padding="5dp"
                android:text="@string/officialinfo"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/workPermitNo"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:hint="@string/workpermitnum"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:id="@+id/visitVisaNo"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:hint="@string/visitvisanum"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:paddingLeft="5dp"
                android:textSize="13dp"></EditText>

            <Spinner
                android:popupBackground="@color/stripcolor"
                android:spinnerMode="dropdown"

                android:id="@+id/idType"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/idNo"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:hint="@string/idnum"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:id="@+id/mobileNo"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:ems="7"
                android:hint="@string/mobno"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <EditText
                android:id="@+id/landlineNo"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="#f3f3f3"
                android:ems="7"
                android:hint="@string/landphoneno"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/custome_edittext_cursorcolor"
                android:textSize="13dp"></EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/orange_btn_color"
                    android:ems="6"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/next"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />


            </LinearLayout>

            <!--  <TextView
                 android:id="@+id/next"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="5dp"
                 android:background="#ED6D05"
                 android:textColor="#ffffff"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:ems="5"
                 android:padding="5dp"
                 android:text="NEXT"
                 android:textSize="15sp" /> -->
        </LinearLayout>
    </ScrollView>
    <!--
         <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                 android:layout_gravity = "center"
                 android:gravity = "center">
            </FrameLayout>
    -->



</LinearLayout>